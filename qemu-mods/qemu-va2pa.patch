+Va2PaInfo *qmp_query_va2pa(int64_t cpu_index, uint64_t addr, Error **errp)
+{
+    Va2PaInfo *info;
+    CPUState *cs;
+    hwaddr phys_addr;
+    
+    cs = qemu_get_cpu(cpu_index);
+    if (!cs) {
+        error_setg(errp, "CPU %lld not found", (long long)cpu_index);
+        return NULL;
+    }
+    
+    info = g_new0(Va2PaInfo, 1);
+    
+    /* Use QEMU's existing debug translation function */
+    phys_addr = cpu_get_phys_page_debug(cs, addr);
+    
+    if (phys_addr != -1) {
+        info->phys = phys_addr;
+        info->size = 4096; /* ARM page size */
+        info->valid = true;
+    } else {
+        info->phys = 0;
+        info->size = 0;
+        info->valid = false;
+    }
+    
+    return info;
+}
